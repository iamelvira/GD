<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body{background-color:#e0ffd7;}
        .container {padding:30px;}
        .btn {padding: 20px;display: block;font-family: sans-serif; font-weight: bold; font-size: 30px; color:#edf7ea; border: none;
             border-radius: 5px; background-color: #67c329;}

        .item{display:flex; align-items: center;}
        .inner {padding:10px; font-family: sans-serif; font-weight: bold; font-size: 20px;color: #67c329}
    </style>
    <title>Document</title>
</head>
<body>
    <div class="container">
        <button type="button" id="show" class="btn">Show Interesting events</button>
        <div class="events">
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.2.13/dist/semantic.min.js"></script>
    <script>
        $(function () {
            var socket = io();
            let id=1;

            $('#show').click(function(){
                socket.emit('message', 'connected');
                $('#show').css('display', 'none');
                return false;
            });
            
            socket.on('message', function(msg){

                $('.events').append($(`<div class="item ${id}">`));

                $(`.${id}`).append($(`<p class="inner ${id}${id}">`));
                $(`.${id}${id}`).append($(`<a href="${msg.link}" target="_blank"> <img src='${msg.imgSrÑ}'> </a>`));
                $(`.${id}`).append($('<p class="inner">').text(msg.title));
                $(`.${id}`).append($('<p class="inner">').text(msg.date));
                $(`.${id}`).append($('<p class="inner">').text(msg.price));
                id++;
            });
        });
    </script>
</body>
</html>